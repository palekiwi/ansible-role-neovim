-- Ansible managed

{% if plugin_manager == "packer" %}
  require('plugins.packer')

  -- packer plugins start
  {% for item in packer_plugins %}
    require('plugins.{{ item.name }}')
  {% endfor %}
  -- packer plugins end
{% endif %}

{% if use_lsp %}
  -- lsp config start
  {% for item in lsp_config_modules %}
    require('plugins.{{ item }}')
  {% endfor %}
  -- lsp config end
{% endif %}

{% if use_treesitter %}
  -- treesitter config start
  {% for item in treesitter_config_modules %}
    require('plugins.{{ item }}')
  {% endfor %}
  -- treesitter config end
{% endif %}

-- config start
  require('config.settings')
  require('config.mappings')
-- config end
